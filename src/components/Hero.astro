        <Microsoft_Learn class="size-4 md:size-6" />
        Microsoft Learn
    </Social>
    <Social  href="mailto:cesaraquiles2000@gmail.com">
        <Gmail class="size-4 md:size-6" />
        Cesaraquiles2000@gmail.com
