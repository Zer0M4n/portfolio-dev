---
import "@fontsource-variable/onest";

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
interface Props {
	title: string;
	description: string;
}

const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		
	</head>
	<body class="relative text-black dark:text-white">
		
		<div
			class="dark:fixed dark:inset-0 dark:z-[-2] dark:h-full dark:w-full dark:bg-[#000000] 
			dark:bg-[radial-gradient(#ffffff33_1px,#00091d_1px)] dark:bg-[size:20px_20px]
			
			absolute inset-0 -z-10 h-full w-full
			 bg-slate-50 bg-[radial-gradient(#b5b5b5_1px,transparent_1px)] 
			[background-size:16px_16px]
			"
			id="Mode"
		>
		</div>
		
		
		
		
		</div>
		<Header />
		<slot/>
		<Footer />
		<style is:global>
			:root {
				color-scheme: light dark;
			}
			html, body {
				height: 100%;
				width: 100%;
				margin: 0;
				padding: 0;
				font-family: "Onest Variable", system-ui, sans-serif;
				scroll-behavior: smooth;
			}
			body {
				background-color: #050505;
				display: flex;
				flex-direction: column;
				position: relative;
				min-height: 100vh;
			}
			#Mode {
				position: fixed;
				width: 100%;
				height: 100%;
			}
			@media (prefers-color-scheme: dark) {
				#Dark_Mode {
					display: block;
				}
			}
			@media (prefers-color-scheme: light) {
				#Light_Mode {
					display: block;
				}
			}
			
		</style>
	</body>
</html>
